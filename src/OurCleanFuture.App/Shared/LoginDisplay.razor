@inject IConfiguration Configuration;

<AuthorizeView>
    <Authorized>
        <MudText Class="mr-4">Hello, @context.User.FindFirst("name")?.Value!.Replace('.', ' ')</MudText>
        <MudTooltip Text="Sign out">
            <MudIconButton Class="mr-3" Link="@Configuration["Auth0:LogoutPath"]" Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" />
        </MudTooltip>
    </Authorized>
    <NotAuthorized>
        <MudText Class="mr-4">Not signed in</MudText>
        <MudTooltip Text="Sign in">
            <MudIconButton Class="mr-3" Link="@Configuration["Auth0:LoginPath"]" Icon="@Icons.Material.Filled.Login" Color="Color.Inherit" />
        </MudTooltip>
    </NotAuthorized>
</AuthorizeView>