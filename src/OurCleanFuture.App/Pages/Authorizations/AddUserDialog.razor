@using OurCleanFuture.Data.Entities
@attribute [Authorize]

<EditForm Model="User" OnValidSubmit="Update">
    <DataAnnotationsValidator/>
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                Add user to @Lead
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudTextField Label="Email" Placeholder="firstname.lastname@yukon.ca" @bind-Value="User.Email" For="() => User.Email"/>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit">Submit</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public Lead Lead { get; set; } = null!;

    public User User { get; set; } = new();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Update()
    {
        User.Email = User.Email.ToLower();
        MudDialog.Close(DialogResult.Ok(User));
    }

}
