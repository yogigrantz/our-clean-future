@using Data.Entities

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Edit unit of measurement
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Label="Symbol" @bind-Value="UnitOfMeasurement.Symbol" />
        <MudTextField Label="Name" @bind-Value="UnitOfMeasurement.Name" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Update">Update</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public UnitOfMeasurement UnitOfMeasurement { get; set; } = null!;

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Update()
    {
        MudDialog.Close(DialogResult.Ok(UnitOfMeasurement));
    }
}